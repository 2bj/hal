{
  "name": "nocarrier/hal",
  "type": "library",
  "description": "application/hal builder / formatter for PHP 5.3+",
  "keywords": ["hal", "xml", "json", "rest", "hypermedia"],
  "homepage": "https://github.com/blongden/hal",
  "license": "MIT",
  "authors": [
    {
    "name": "Ben Longden",
    "email": "ben@nocarrier.co.uk",
    "homepage": "http://nocarrier.co.uk"
  }
  ],
  "require": {
    "php": ">=5.3.0"
  },
  "require-dev": {
    "phpunit/phpunit": "3.7.*",
    "phploc/phploc": "dev-master",
    "zetacomponents/console-tools": "dev-master",
    "pdepend/pdepend": "~1.1",
    "phpmd/phpmd": "~1.4",
    "squizlabs/php_codesniffer": "~1.4",
    "sebastian/phpcpd": "~1.4",
    "sebastian/finder-facade": "dev-master",
    "theseer/fdomdocument": "dev-master",
    "mayflower/php-codebrowser": "~1.0@dev",
    "pear/console_commandline": "dev-trunk",
    "pear/log": "dev-master",
    "pear/pear_exception": "dev-master",
    "phpdocumentor/phpdocumentor": "*"
  },
  "minimum-stability": "dev",
  "autoload": {
    "psr-0": {
      "Nocarrier": "src"
    }
  },
  "config": {
    "bin-dir": "bin"
  }
}
